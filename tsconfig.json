{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./", // aliasのため其の1
    "paths": { // aliasのため其の2
      "@/*": [
        "./src/*"
      ],
    },
    "typeRoots": [
      "node_modules/@types",         // デフォルトではここだけ読む.忘れず書き添える
      "types" // ここを読むように変更
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "amplify/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "serverless/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
